<%- include('header') %>
<!-- ============================================================== -->
      <!-- End Left Sidebar - style you can find in sidebar.scss  -->
      <!-- ============================================================== -->
      <!-- ============================================================== -->
      <!-- Page wrapper  -->
      <!-- ============================================================== -->
      <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <h4 class="page-title">Form Basic</h4>
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Library
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
          <!-- ============================================================== -->
          <!-- Start Page Content -->
          <!-- ============================================================== -->
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/insertAdminRecord">
                  <div class="card-body">
                    <h4 class="card-title">Personal Info</h4>
                    <% if(flash.success && flash.success.length >0){ %>
                         <div class="alert alert-success"><%= flash.success %></div>
                    <% } %>
                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >First Name</label >
                      <div class="col-sm-9">
                        <input   type="text" value="<%= locals.user.name %>" class="form-control" name="fname"  id="fname"  placeholder="First Name Here" />
                      </div>
                    </div>

                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >Last Name</label >
                      <div class="col-sm-9">
                        <input   type="text" class="form-control" name="lname"  id="lname"  placeholder="Last Name Here" />
                      </div>
                    </div>

                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >Enter email</label >
                      <div class="col-sm-9">
                        <input   type="text" class="form-control" name="email"  id="email"  placeholder="Enter email Here" />
                      </div>
                    </div>

                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >Enter password</label >
                      <div class="col-sm-9">
                        <input   type="password" class="form-control" name="password"  id="password"  placeholder="Enter password Here" />
                      </div>
                    </div>

                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >Select gender</label >
                      <div class="col-sm-9">
                        <input type="radio"  name="gender"  id="gender" value="male"/>Male
                        <input type="radio"  name="gender"  id="gender" value="female"/>Female
                      </div>
                    </div>


                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >Select Hobby</label >
                      <div class="col-sm-9">
                        <input type="checkbox"  name="hobby[]"  id="hobby" value="Reading"/>Reading
                        <input type="checkbox"  name="hobby[]"  id="hobby" value="Music"/>Music
                        <input type="checkbox"  name="hobby[]"  id="hobby" value="Adventure"/>Adventure
                      </div>
                    </div>

                    <% city = ['Surat',"Vadodara","Rajkot","Ahmdabad"] %>
                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >Select City</label >
                      <div class="col-sm-9">
                        <select class="form-control"  name="city"  id="city">
                            <option value="">--select city--</option>
                            <% city.forEach((v,i)=>{ %>
                              <option value="<%= v %>"><%= v %></option>
                            <% }) %>
                        </select>
                      </div>
                    </div>


                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >Enter Description</label >
                      <div class="col-sm-9">
                        <textarea name="description"  id="description" row="5" cols="50" class="form-control"></textarea>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label  for="fname" class="col-sm-3 text-end control-label col-form-label"  >Enter Description</label >
                      <div class="col-sm-9">
                        <input type="file" class="form-control" name="avatar">
                      </div>
                    </div>
                  </div>
                  <div class="border-top">
                    <div class="card-body">
                      <button type="submit" name="submit" class="btn btn-primary">
                        Submit
                      </button>
                    </div>
                  </div>
                </form>
              </div>
             
          
            </div>
            
          </div>
          <!-- editor -->
         
          <!-- ============================================================== -->
          <!-- End PAge Content -->
          <!-- ============================================================== -->
          <!-- ============================================================== -->
          <!-- Right sidebar -->
          <!-- ============================================================== -->
          <!-- .right-sidebar -->
          <!-- ============================================================== -->
          <!-- End Right sidebar -->
          <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <%- include('footer') %>
        