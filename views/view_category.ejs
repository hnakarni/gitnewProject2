    <div class="container-fluid">
      <!-- ============================================================== -->
      <!-- Start Page Content -->
      <!-- ============================================================== -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title mb-0">Static Table</h5>
            </div>
            <% if(flash.success && flash.success.length >0){ %>
              <div class="alert alert-success"><%= flash.success %></div>
          <% } %>
              <form method="post" action="/category/searchingData">
              <input type="text" name="search" ><input type="submit" value="searching">
            </form>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">category name</th>
                  <th scope="col">Status</th>
                 
                  <th scope="col">Action</th>

                </tr>
              </thead>
              <tbody>
                <% var no =1; for(var cate of catData) { %>
                <tr>
                  <th scope="row"><%= no++ %></th>
                  <td><a href="/showfull/<%= cate.id %>"><%= cate.category %></a></td>
                  <td><% if(cate.isactive){%>
                        <a href="/category/deactiveStatus/<%= cate.id %>">active</a>
                      <% } else { %>
                       Deactive
                      <% } %>
                    </td>
                
                  
                  <td><a href="/deleteAdmin/<%= cate.id %>"><i class="fa fa-trash"></i></a> || <i class="fa fa-edit"></i></td>
               
                </tr>

                <% } %>
              
              </tbody>
            </table>

            <br><br>

            <table class="table">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">category name</th>
                  <th scope="col">Status</th>
                 
                  <th scope="col">Action</th>

                </tr>
              </thead>
              <tbody>
                <% var no =1; for(var cate of dcateData) { %>
                <tr>
                  <th scope="row"><%= no++ %></th>
                  <td><a href="/showfull/<%= cate.id %>"><%= cate.category %></a></td>
                  <td><% if(cate.isactive){%>
                        <a href="/category/deactiveStatus/<%= cate.id %>">active</a>
                      <% } else { %>
                       <a href="/category/activeStatus/<%= cate.id %>">Deactive</a>
                      <% } %>
                    </td>
                
                  
                  <td><a href="/deleteAdmin/<%= cate.id %>"><i class="fa fa-trash"></i></a> || <i class="fa fa-edit"></i></td>
               
                </tr>

                <% } %>
              
              </tbody>
            </table>
          </div>

        </div>
      </div>
      <!-- ============================================================== -->
      <!-- End PAge Content -->
